package decisao;

import javax.swing.JOptionPane;

public class ListaExercicioTres {

	public static void main(String[] args) {

/*
 * 3. Elabore uma aplicação que leia o valor de dois números inteiros e a operação 
 * aritmética desejada; calcule, então, a resposta adequada. 
 * Utilize os símbolos aritméticos para ler qual a operação aritmética escolhida.
 *  (exemplo: + para somar, - para subtrair e assim sucessivamente) (Correção: 14:40)
 *  * 
 */
int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Valor 1"));
int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Valor 2"));
char operacao = JOptionPane.showInputDialog 
("Digite:\n<+> Somar\n<-> Subtrair\n<*> Multiplicar\n</> Dividir").charAt(0);

int resultado=0;
if (operacao =='+') {
	resultado=valor1+valor2;
}else if (operacao=='-') {
	resultado=valor1-valor2;
}else if (operacao=='*') {
	resultado=valor1*valor2;
}else if (operacao=='/') {
	resultado=valor1/valor2;
}else {
	System.out.println("Operacao Invalida");
}
	System.out.println("Resultado: " + resultado);
}
		
	}


